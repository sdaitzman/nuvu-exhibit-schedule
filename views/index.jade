doctype html
head
  meta(charset="utf-8")
  link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300", type="text/css")
  link(rel="stylesheet", href="/css/styles.min.css")
  title= title
body
  div.page-wrapper
    div.row-wrapper
      div.logotype-wrapper-wrapper
        div.logotype-wrapper-wrapper    
          img.logotype(src="/img/logotype.svg", alt="NuVu Exhibit Schedule")
    each exhibit in exhibits
      div.row-wrapper
        div.presention-box
          h1= exhibit.title
          h2= exhibit.students
          p= exhibit.text
